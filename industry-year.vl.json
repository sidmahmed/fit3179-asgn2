{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/ahmedbonyeamin/fit3179-asgn2/master/cleaned%20data/top_industry.csv"},
  "width": 500,
  "height": 400,
  "encoding": {
    "x": {"field": "Year", "type": "temporal", "title": "date", "timeUnit": "year", "axis" : {
      "grid": false  
    }},
    "y": {"field": "Number", "type": "quantitative", "title": "Number of migrations", "axis" : {
      "grid": false  
    }},
    "color": {
      "condition": {
        "test": "datum.Industry ==  'Accommodation and Food Services' || datum.Industry ==  'Professional, Scientific and Technical Services' || datum.Industry ==  'Health Care and Social Assistance'",
        "field": "Industry",
        "type": "nominal",
        "legend" :null
      },
      "value": "grey"
    },
    "opacity": {
      "condition": {
        "test" : "datum.Industry ==  'Accommodation and Food Services' || datum.Industry ==  'Professional, Scientific and Technical Services' || datum.Industry ==  'Health Care and Social Assistance'",
        "value": 1
      },
      "value": 0.2
    }
  },
  "layer": [{
    "description": "transparent layer to make it easier to trigger selection",
    "params": [{
      "name": "hover",
      "value": [{"Industry": "Accommodation and Food Services"}],
      "select": {
        "type": "point",
        "fields": ["Industry"],
        "on": "click"
      }
    }],
    "mark": {"type": "line", "strokeWidth": 8, "stroke": "transparent", "point": true}
  }, {
    "mark": "line"
  }, {
    "encoding": {
      "x": {"aggregate": "max", "field": "Year"},
      "y": {"aggregate": {"argmax": "Year"}, "field": "Number"}
    },
    "layer": [{
      "mark": {"type": "circle"}
    }, {
      "mark": {"type": "text", "align": "left", "dx": 4},
      "encoding": {"text": {"field":"Industry", "type": "nominal"}}
    }]
  }],
  "config": {"view": {"stroke": null}}
}
