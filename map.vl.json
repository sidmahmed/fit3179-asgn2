{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "#FFFFFF",
  "padding": 5,
  "width": 600,
  "height": 400,
  "title": {"anchor": "start", "text": "Australian Immigrant Population"},
  "data": [
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/ahmedbonyeamin/fit3179-asgn2/master/cleaned%20data/STE_2016_AUST.json",
      "format": {"type": "topojson", "feature": "STE_2016_AUST"}
    },
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/ahmedbonyeamin/fit3179-asgn2/master/cleaned%20data/state-year-visa.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {
          "type": "lookup",
          "from": "source_1",
          "key": "properties.STE_NAME16",
          "fields": ["State"],
          "as": ["geo"]
        },
        {"type": "filter", "expr": "datum.Year == Year_selection"},
        {"type": "filter", "expr": "datum.Visa == Visa_selection"},
        {"type": "filter", "expr": "isValid(datum[\"geo\"])"},
        {"type": "geojson", "geojson": "geo", "signal": "geojson_0"},
        {
          "type": "filter",
          "expr": "isValid(datum[\"Number\"]) && isFinite(+datum[\"Number\"])"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {"signal": "geojson_0"},
      "type": "equirectangular"
    }
  ],
  "signals": [
    {
      "name": "Year_selection",
      "value": 2015,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2015,
        "step": 1,
        "name": "Select Year: "
      }
    },
    {
      "name": "Visa_selection",
      "value": "Skilled",
      "bind": {
        "input": "select",
        "options": ["Skilled", "Humanitarian", "Family"],
        "name": "Select type of Visa: "
      }
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "Number"},
          "tooltip": {
            "signal": "{\"State\": isValid(datum[\"State\"]) ? datum[\"State\"] : \"\"+datum[\"State\"], \"Number of visas granted\": format(datum[\"Number\"], \"\"), \"Type of Visa\": isValid(datum[\"Visa\"]) ? datum[\"Visa\"] : \"\"+datum[\"Visa\"]}"
          },
          "ariaRoleDescription": {"value": "geoshape"},
          "description": {
            "signal": "\"geo: \" + (isValid(datum[\"geo\"]) ? datum[\"geo\"] : \"\"+datum[\"geo\"]) + \"; Number: \" + (format(datum[\"Number\"], \"\")) + \"; State: \" + (isValid(datum[\"State\"]) ? datum[\"State\"] : \"\"+datum[\"State\"]) + \"; Number of visas granted: \" + (format(datum[\"Number\"], \"\")) + \"; Type of Visa: \" + (isValid(datum[\"Visa\"]) ? datum[\"Visa\"] : \"\"+datum[\"Visa\"])"
          }
        }
      },
      "transform": [
        {
          "type": "geoshape",
          "projection": "projection",
          "field": "datum[\"geo\"]"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "linear",
      "domain": {"data": "source_0", "field": "Number"},
      "range": {"scheme": "lighttealblue"},
      "interpolate": "hcl",
      "zero": false
    }
  ],
  "legends": [
    {
      "fill": "color",
      "gradientLength": {"signal": "clamp(height, 64, 200)"},
      "title": "Number"
    }
  ],
  "config": {
    "range": {
      "category": [
        "#1696d2",
        "#ec008b",
        "#fdbf11",
        "#000000",
        "#d2d2d2",
        "#55b748"
      ],
      "diverging": [
        "#ca5800",
        "#fdbf11",
        "#fdd870",
        "#fff2cf",
        "#cfe8f3",
        "#73bfe2",
        "#1696d2",
        "#0a4c6a"
      ],
      "heatmap": [
        "#ca5800",
        "#fdbf11",
        "#fdd870",
        "#fff2cf",
        "#cfe8f3",
        "#73bfe2",
        "#1696d2",
        "#0a4c6a"
      ],
      "ordinal": [
        "#cfe8f3",
        "#a2d4ec",
        "#73bfe2",
        "#46abdb",
        "#1696d2",
        "#12719e"
      ],
      "ramp": [
        "#CFE8F3",
        "#A2D4EC",
        "#73BFE2",
        "#46ABDB",
        "#1696D2",
        "#12719E",
        "#0A4C6A",
        "#062635"
      ]
    },
    "path": {"stroke": "#1696d2", "strokeWidth": 0.5},
    "shape": {"stroke": "#1696d2"},
    "symbol": {"fill": "#1696d2", "size": 30},
    "axisX": {
      "domain": true,
      "domainColor": "#000000",
      "domainWidth": 1,
      "grid": false,
      "labelFontSize": 12,
      "labelFont": "Lato",
      "labelAngle": 0,
      "tickColor": "#000000",
      "tickSize": 5,
      "titleFontSize": 12,
      "titlePadding": 10,
      "titleFont": "Lato"
    },
    "axisY": {
      "domain": false,
      "domainWidth": 1,
      "grid": true,
      "gridColor": "#DEDDDD",
      "gridWidth": 1,
      "labelFontSize": 12,
      "labelFont": "Lato",
      "labelPadding": 8,
      "ticks": false,
      "titleFontSize": 12,
      "titlePadding": 10,
      "titleFont": "Lato",
      "titleAngle": 0,
      "titleY": -10,
      "titleX": 18
    },
    "legend": {
      "labelFontSize": 12,
      "labelFont": "Lato",
      "symbolSize": 100,
      "titleFontSize": 12,
      "titlePadding": 10,
      "titleFont": "Lato",
      "orient": "right",
      "offset": 10
    },
    "style": {
      "bar": {"fill": "#1696d2", "stroke": null},
      "cell": {"stroke": "transparent"},
      "arc": {"fill": "#1696d2"},
      "area": {"fill": "#1696d2"},
      "line": {"stroke": "#1696d2", "strokeWidth": 5},
      "rect": {"fill": "#1696d2"},
      "text": {
        "font": "Lato",
        "fontSize": 11,
        "align": "center",
        "fontWeight": 400,
        "size": 11
      },
      "trail": {"stroke": "#1696d2", "strokeWidth": 0, "size": 1},
      "group-title": {"fontSize": 18, "font": "Lato"}
    }
  }
}