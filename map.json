{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Australia's Immigrant Population",
  "width": 800,
  "height": 600,
  "projection": {"type": "equirectangular"},
  "data": {
    "url": "https://raw.githubusercontent.com/ahmedbonyeamin/fit3179-asgn2/master/cleaned%20data/STE_2016_AUST.json",
    "format": {"type": "topojson", "feature": "STE_2016_AUST"}
  },
  "transform": [
    {
      "lookup": "properties.STE_NAME16",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/ahmedbonyeamin/fit3179-asgn2/master/cleaned%20data/state-year-visa.csv"
        },
        "key": "State",
        "fields": ["Number"]
      }
    },     
    {
      "aggregate": [{
       "op": "sum",
       "field": "Number",
       "as": "sum_number"
      }],
      "groupby": ["properties.STE_NAME16"]
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {"field": "sum_number", "type": "quantitative"},
    "tooltip": [
      {"field": "properties.STE_NAME16", "type": "nominal", "title": "State"},
      {"field": "sum_number", "type": "quantitative", "title": "Number of Migrants"}
    ]
  }
}