{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "#FFFFFF",
  "padding": 5,
  "width": 500,
  "height": 320,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/ahmedbonyeamin/fit3179-asgn2/master/cleaned%20data/origin.csv",
      "format": {"type": "csv", "parse": {"Year": "date"}},
      "transform": [
        {
          "type": "filter",
          "expr": "datum.Country ==  'India' || datum.Country ==  'United Kingdom' || datum.Country ==  'Philippines'"
        },
        {
          "field": "Year",
          "type": "timeunit",
          "units": ["year"],
          "as": ["year_Year", "year_Year_end"]
        },
        {
          "type": "aggregate",
          "groupby": ["year_Year", "Country", "Number of visas granted"],
          "ops": ["sum"],
          "fields": ["Number of visas granted"],
          "as": ["sum_Number of visas granted"]
        },
        {
          "type": "impute",
          "field": "sum_Number of visas granted",
          "groupby": ["Country"],
          "key": "year_Year",
          "method": "value",
          "value": 0
        },
        {
          "type": "stack",
          "groupby": ["year_Year"],
          "field": "sum_Number of visas granted",
          "sort": {"field": ["Country"], "order": ["descending"]},
          "as": [
            "sum_Number of visas granted_start",
            "sum_Number of visas granted_end"
          ],
          "offset": "zero"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "pathgroup",
      "type": "group",
      "from": {
        "facet": {
          "name": "faceted_path_main",
          "data": "source_0",
          "groupby": ["Country"]
        }
      },
      "encode": {
        "update": {
          "width": {"field": {"group": "width"}},
          "height": {"field": {"group": "height"}}
        }
      },
      "marks": [
        {
          "name": "marks",
          "type": "area",
          "style": ["area"],
          "sort": {"field": "datum[\"year_Year\"]"},
          "from": {"data": "faceted_path_main"},
          "encode": {
            "update": {
              "orient": {"value": "vertical"},
              "fill": {"scale": "color", "field": "Country"},
              "tooltip": {
                "signal": "{\"Country\": isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"], \"Number of visas granted\": isValid(datum[\"Number of visas granted\"]) ? datum[\"Number of visas granted\"] : \"\"+datum[\"Number of visas granted\"]}"
              },
              "description": {
                "signal": "\"Year (year): \" + (timeFormat(datum[\"year_Year\"], '%Y')) + \"; Number of Visas Granted: \" + (format(datum[\"sum_Number of visas granted\"], \"\")) + \"; Country: \" + (isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]) + \"; Number of visas granted: \" + (isValid(datum[\"Number of visas granted\"]) ? datum[\"Number of visas granted\"] : \"\"+datum[\"Number of visas granted\"])"
              },
              "x": {"scale": "x", "field": "year_Year"},
              "y": {"scale": "y", "field": "sum_Number of visas granted_end"},
              "y2": {
                "scale": "y",
                "field": "sum_Number of visas granted_start"
              },
              "defined": {
                "signal": "isValid(datum[\"year_Year\"]) && isFinite(+datum[\"year_Year\"]) && isValid(datum[\"sum_Number of visas granted\"]) && isFinite(+datum[\"sum_Number of visas granted\"])"
              }
            }
          }
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "domain": {"data": "source_0", "field": "year_Year"},
      "range": [0, {"signal": "width"}]
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source_0",
        "fields": [
          "sum_Number of visas granted_start",
          "sum_Number of visas granted_end"
        ]
      },
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "source_0", "field": "Country", "sort": true},
      "range": "category"
    }
  ],
  "axes": [
    {
      "scale": "y",
      "orient": "left",
      "gridScale": "x",
      "grid": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Year (year)",
      "format": "%Y",
      "labelBaseline": "top",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Number of Visas Granted",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 0
    }
  ],
  "legends": [{"fill": "color", "symbolType": "circle", "title": "Country"}],
  "config": {
    "range": {
      "category": [
        "#1696d2",
        "#ec008b",
        "#fdbf11",
        "#000000",
        "#d2d2d2",
        "#55b748"
      ],
      "diverging": [
        "#ca5800",
        "#fdbf11",
        "#fdd870",
        "#fff2cf",
        "#cfe8f3",
        "#73bfe2",
        "#1696d2",
        "#0a4c6a"
      ],
      "heatmap": [
        "#ca5800",
        "#fdbf11",
        "#fdd870",
        "#fff2cf",
        "#cfe8f3",
        "#73bfe2",
        "#1696d2",
        "#0a4c6a"
      ],
      "ordinal": [
        "#cfe8f3",
        "#a2d4ec",
        "#73bfe2",
        "#46abdb",
        "#1696d2",
        "#12719e"
      ],
      "ramp": [
        "#CFE8F3",
        "#A2D4EC",
        "#73BFE2",
        "#46ABDB",
        "#1696D2",
        "#12719E",
        "#0A4C6A",
        "#062635"
      ]
    },
    "path": {"stroke": "#1696d2", "strokeWidth": 0.5},
    "shape": {"stroke": "#1696d2"},
    "symbol": {"fill": "#1696d2", "size": 30},
    "axisX": {
      "domain": true,
      "domainColor": "#000000",
      "domainWidth": 1,
      "grid": false,
      "labelFontSize": 12,
      "labelFont": "Lato",
      "labelAngle": 0,
      "tickColor": "#000000",
      "tickSize": 5,
      "titleFontSize": 12,
      "titlePadding": 10,
      "titleFont": "Lato"
    },
    "axisY": {
      "domain": false,
      "domainWidth": 1,
      "grid": true,
      "gridColor": "#DEDDDD",
      "gridWidth": 1,
      "labelFontSize": 12,
      "labelFont": "Lato",
      "labelPadding": 8,
      "ticks": false,
      "titleFontSize": 12,
      "titlePadding": 10,
      "titleFont": "Lato",
      "titleAngle": 0,
      "titleY": -10,
      "titleX": 18
    },
    "legend": {
      "labelFontSize": 12,
      "labelFont": "Lato",
      "symbolSize": 100,
      "titleFontSize": 12,
      "titlePadding": 10,
      "titleFont": "Lato",
      "orient": "right",
      "offset": 10
    },
    "style": {
      "bar": {"fill": "#1696d2", "stroke": null},
      "cell": {"stroke": "transparent"},
      "arc": {"fill": "#1696d2"},
      "area": {"fill": "#1696d2"},
      "line": {"stroke": "#1696d2", "strokeWidth": 5},
      "rect": {"fill": "#1696d2"},
      "text": {
        "font": "Lato",
        "fontSize": 11,
        "align": "center",
        "fontWeight": 400,
        "size": 11
      },
      "trail": {"stroke": "#1696d2", "strokeWidth": 0, "size": 1},
      "group-title": {"fontSize": 18, "font": "Lato"}
    }
  }
}