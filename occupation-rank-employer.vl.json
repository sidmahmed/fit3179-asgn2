{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Multi-series line chart with labels and interactive highlight on hover.  We also set the selection's initial value to provide a better screenshot",
  "data": {
    "url": "https://raw.githubusercontent.com/ahmedbonyeamin/fit3179-asgn2/master/cleaned%20data/occupation-rank.csv"
  },
  "width": 600,
  "height": 400,
  "encoding": {
    "x": {
      "field": "Year",
      "type": "nominal",
      "title": "Year"
    },
    "y": {
      "field": "Rank",
      "type": "quantitative",
      "title": "Rank", "sort": "descending", "scale": {"domain": [1,11]},
      "axis" : {
        "grid": false  
      }
      
    },
    "color": {
      "condition": {
        "test": "datum.Occupation ==  'Cooks' || datum.Occupation ==  'Software and Applications Programmers' || datum.Occupation ==  'Cafe and Restaurant Managers'",
        "field": "Occupation",
        "type": "nominal",
        "legend" :null
      },
      "value": "grey"
    },
    "opacity": {"condition": {"test": "datum.Occupation ==  'Cooks' || datum.Occupation ==  'Software and Applications Programmers' || datum.Occupation ==  'Cafe and Restaurant Managers'", "value": 1}, "value": 0.2}
  },
  "layer": [
    {
      "description": "transparent layer to make it easier to trigger selection",
      "params": [
        {
          "name": "hover",
          "value": [{"Occupation": "Cooks"}],
          "select": {"type": "point", "fields": ["Occupation"], "on": "click"}
        }
      ],
      "mark": {
        "type": "line",
        "strokeWidth": 8,
        "stroke": "transparent",
        "point": true
      }
    },
    {"mark": "line"},
    {
      "encoding": {
        "x": {"aggregate": "max", "field": "Year"},
        "y": {"aggregate": {"argmax": "Year"}, "field": "Rank"}
      },
      "layer": [
        {"mark": {"type": "circle"}},
        {
          "mark": {"type": "text", "align": "left", "dx": 4},
          "encoding": {"text": {"field": "Occupation", "type": "nominal"}}
        }
      ]
    }
  ],
  "config": {"view": {"stroke": null}}
}